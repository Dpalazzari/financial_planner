<div class = "col-md-offset-3 col-md-6 text-center">
  <h1>Register New Account</h1>
</div>
<div class = "col-md-offset-4 col-md-4">
  <%= bootstrap_form_for @user do |f| %>
    <%= f.text_field :name, placeholder: 'Your Name', skip_label: true %>
    <%= f.email_field :email, placeholder: 'Your email: name@example.com', skip_label: true %>
    <%= f.number_field :budget, placeholder: 'Your Budget', skip_label: true %>
    <%= f.password_field :password, placeholder: 'Your new password', skip_label: true %>
    <%= f.password_field :password_confirmation, placeholder: 'Confirm Password.', skip_label: true %>
    <%= f.submit 'Register', {class: "btn btn-success btn-block"}%>
  <% end %>
</div>
